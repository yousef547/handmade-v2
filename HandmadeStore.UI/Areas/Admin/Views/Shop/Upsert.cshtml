
@using HandmadeStore.Models.Models;
@model Shop
@{
    ViewData["Title"] = "Update";
}

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <div class="row">
        <h2 class="text-primary">@(Model.Id != 0 ? "Update" : "Create") Product</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="StreetAdress"></label>
            <input asp-for="StreetAdress" class="form-control" />
            <span asp-validation-for="StreetAdress" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="PostalCode"></label>
            <input asp-for="PostalCode" class="form-control" />
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Number"></label>
            <input asp-for="Number" class="form-control" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>

    </div>

    <div class="d-flex justify-content-between">
        @if (Model.Id != 0)
        {
            <button type="submit" class="btn btn-primary w-50 me-1"><i class="bi bi-pencil-square"></i>&nbsp; Update</button>
        }
        else
        {
            <button type="submit" class="btn btn-primary w-50 me-1"><i class="bi bi-plus-square"></i>&nbsp; Create</button>
        }
        <a asp-action="Index" class="btn btn-secondary w-50">
            <i class="bi bi-arrow-left-square"></i>&nbsp; Back to List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}

