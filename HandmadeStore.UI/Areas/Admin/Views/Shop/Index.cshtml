@{
    ViewData["Title"] = "Index";
}
<div class="container-fluid p-1">

    <div class="mb-2">
        <div class="row">
            <div class="col-6">
                <h2 class="text-primary">Shop List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Shop" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-square"></i>&nbsp; Create New Shop
                </a>
            </div>
        </div>
    </div>
    <div class="border border-2 border-primary p-2">
        <table id="dataTable" class="text-center pt-2 w-100">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th class="text-center">
                        &nbsp;&nbsp; City
                    </th>
                    <th class="text-center">
                        &nbsp;&nbsp; Address
                    </th>
                    <th class="text-center">
                        &nbsp;&nbsp; Postal Code
                    </th>
                    <th class="text-center">
                        &nbsp;&nbsp; Phone
                    </th>
                    <th class="text-center">
                        &nbsp;&nbsp; Actions
                    </th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/shop.js"></script>
}

