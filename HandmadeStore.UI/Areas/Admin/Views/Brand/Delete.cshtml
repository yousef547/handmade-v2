@model Brand
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Brand</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary w-50 me-1"><i class="bi bi-x-square"></i>&nbsp; Delete</button>
            <a asp-action="Index" class="btn btn-secondary w-50">
                <i class="bi bi-arrow-left-square"></i>&nbsp; Back to List
            </a>
        </div>
    </div>
</form>



